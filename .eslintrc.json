{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-useless-constructor": "off",
        "import/extensions": [2, "ignorePackages"],
        "import/no-extraneous-dependencies": [
          "error", {
            "devDependencies": ["test/**"]
          }
      ]
    }
}
